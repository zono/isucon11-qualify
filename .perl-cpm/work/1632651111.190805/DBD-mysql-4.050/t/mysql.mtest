{ local $opt = {
         'ldflags' => '',
         'nocatchstderr' => 0,
         'mysql_config' => 'mysql_config',
         'testpassword' => '',
         'testsocket' => '',
         'nofoundrows' => 0,
         'testhost' => '',
         'cflags' => '-I/usr/include/mysql',
         'testport' => '',
         'testuser' => 'isucon',
         'testdb' => 'test',
         'nossl' => 0,
         'embedded' => '',
         'libs' => '-L/usr/lib/x86_64-linux-gnu -lmysqlclient -lpthread -ldl -lz -lssl -lcrypto -lresolv -lm -lrt'
       };
$::test_host = $opt->{'testhost'};
$::test_port = $opt->{'testport'};
